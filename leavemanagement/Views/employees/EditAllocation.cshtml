@model leavemanagement.Models.leaveallocationeditvm

@{
    ViewData["Title"] = "Edit Allocation";
}

<h1>Edit @Model.leavetype?.name Allocation for @Model.employee.firstname @Model.employee.lastname</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditAllocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="employeeid" />
            <input type="hidden" asp-for="leavetypeid" />

            <div class="form-group">
                <label asp-for="noofdays" class="control-label"></label>
                <input asp-for="noofdays" class="form-control" />
                <span asp-validation-for="noofdays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="period" class="control-label"></label>
                <input asp-for="period" class="form-control" />
                <span asp-validation-for="period" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark">Back to List</a> &nbsp;
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

